@model List<EducationListDto>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="text-right mb-2">
    <a asp-action="Add" asp-controller="Education" class="btn btn-outline-dark">Yeni Eğitim</a>
</div>
<table class="table table-hover table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>Eğitim Aldığı Kurum</th>
            <th>Fakülte</th>
            <th>Derecesi</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    <a asp-action="Update" asp-controller="Education" asp-route-id="@item.Id" class="btn btn-warning btn-sm mr-1">Güncelle</a>
                    <a asp-action="Delete" asp-controller="Education" asp-route-id="@item.Id" onclick=" return confirm('Silmek istediğinize emin misiniz?')" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>

</table>