@model ExperinceUpdateDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Update" asp-controller="Experince">
    <input type="hidden" asp-for="@Model.Id"/>
    <div class="form-group">
        <label>
            Ünvan :
            <span asp-validation-for="@Model.Title" class="text-danger"></span>
        </label>
        <input asp-for="@Model.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>
            Firma :
            <span asp-validation-for="@Model.SubTitle" class="text-danger"></span>
        </label>
        <input asp-for="@Model.SubTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>
            Açıklma :
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </label>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>
            Başlangıç Tarihi :
            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        </label>
        <input type="date" asp-for="@Model.StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label>
            Bitiş Tarihi :
        </label>
        <input type="date" asp-for="@Model.EndDate" class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Güncelle</button>
    </div>

</form>