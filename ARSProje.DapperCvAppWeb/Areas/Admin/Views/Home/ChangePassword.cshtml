@model AppUserPasswordDto

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-warning">
   <p>
        <strong>Uyarı</strong> Şifreniz değiştirildikten sonra otomatik olarak çıkış yaptırılacak.
   </p> 
</div>

<form asp-action="ChangePassword" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label>Parolanız :
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </label>
        <input type="password" asp-for="@Model.Password" class="form-control" />
    </div>
    <div class="form-group">
        <label>Parolanız (Tekrar):
            <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        </label>
        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
</form>