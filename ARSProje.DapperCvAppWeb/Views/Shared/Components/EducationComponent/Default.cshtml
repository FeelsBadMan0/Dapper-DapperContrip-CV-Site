@model List<ARSProje.DapperCvAppDTO.DTOs.EducationDtos.EducationListDto>
<section class="resume-section" id="education">
    <div class="resume-section-content">
        <h2 class="mb-5">Eğitim</h2>
        @foreach (var edc in Model)
        {
            <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
                <div class="flex-grow-1">
                    <h3 class="mb-0">@edc.Title</h3>
                    <div class="subheading mb-3">@edc.SubTitle</div>
                    <div>@edc.Description</div>
                </div>
                <div class="flex-shrink-0"><span class="text-primary">@edc.StartDate.ToString("Y") -
                        @{
                            if (edc.EndDate.HasValue)
                            {
                                <span>@(((DateTime)edc.EndDate).ToString("Y"))</span>
                            }
                            else
                            {
                                <span>Devam Ediyor</span>
                            }
                        }
                </span></div>
            </div>
        }
        

    </div>
</section>